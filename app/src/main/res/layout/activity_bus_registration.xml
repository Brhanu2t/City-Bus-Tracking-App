<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".BusRegistration">

    <EditText
        android:id="@+id/IDNumber"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="Bus ID"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/PlateNumber"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="Bus plate No"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDNumber"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/DriverName"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="Driver"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlateNumber"
        app:layout_constraintVertical_bias="0.032" />

    <EditText
        android:id="@+id/GPSNumber"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="GPS Code"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DriverName"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/SourceName"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="Source address"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GPSNumber"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/DestinationName"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:hint="Destination  address"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SourceName"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/PathLine"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/teal_200"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Path"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DestinationName"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/PriceNumber"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:background="@color/design_default_color_secondary"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PathLine"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/Regbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Register"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PriceNumber"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/RegInfo"
        android:layout_width="414dp"
        android:layout_height="63dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="Registration Info"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Regbutton"
        app:layout_constraintVertical_bias="0.146" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="172dp"
        android:layout_height="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegInfo"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>